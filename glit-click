<body>
  <header>
    <div id="settings">‚öôÔ∏è Settings</div>
    <div id="codes">üîë Codes</div>
  </header>

  <h1>Glitch Clicker</h1>
  <img id="clicker-img" src="https://media.giphy.com/media/JIX9t2j0ZTN9S/giphy.gif" alt="Glitch" />
  <div id="counter">Glitch Points: 0</div>
  <div id="multiplier">Multiplier: 1</div>
  <div id="message"></div>

  <div id="codeInput" style="display: none;">
    <input type="text" id="codeBox" placeholder="Enter code...">
    <button onclick="useCode()">Submit</button>
  </div>

  <script>
    let points = 0;
    let multiplier = 1;

    const img = document.getElementById("clicker-img");
    const counter = document.getElementById("counter");
    const multDisplay = document.getElementById("multiplier");
    const message = document.getElementById("message");
    const codesBtn = document.getElementById("codes");
    const codeInput = document.getElementById("codeInput");

    const milestones = {
      1: "Welcome!",
      10: "Transforming...",
      100: "Glitch Visitor",
      1000: "Reality Breaking",
      10000: "You are the Glitch!"
    };

    img.addEventListener("click", () => {
      points += multiplier;
      counter.textContent = "Glitch Points: " + points;
      multDisplay.textContent = "Multiplier: " + multiplier;

      if (milestones[points]) {
        showMessage(milestones[points]);
      }
    });

    function showMessage(text) {
      message.textContent = text;
      message.classList.remove("hidden");
      setTimeout(() => {
        message.classList.add("hidden");
      }, 2000);
    }

    codesBtn.addEventListener("click", () => {
      codeInput.style.display = codeInput.style.display === "none" ? "block" : "none";
    });

    function useCode() {
      const code = document.getElementById("codeBox").value.trim().toLowerCase();
      let valid = true;

      switch (code) {
        case "superglitch":
          points += 100000;
          showMessage("Code used: +100000 Glitch Points");
          break;
        case "bestglitchcode":
          multiplier += 100000;
          showMessage("Code used: +100000 Multiplier");
          break;
        case "firstglitch":
          multiplier += 1000;
          showMessage("Code used: +1000 Multiplier");
          break;
        default:
          showMessage("‚ùå Invalid code");
          valid = false;
      }

      if (valid) {
        counter.textContent = "Glitch Points: " + points;
        multDisplay.textContent = "Multiplier: " + multiplier;
      }

      document.getElementById("codeBox").value = "";
    }
  </script>
