<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Glitch Clicker</title>
  <style>
    body {
      background: #000;
      color: #0f0;
      font-family: monospace;
      margin: 0;
      padding: 0;
    }
    header {
      display: flex;
      justify-content: space-between;
      padding: 10px;
      background: #111;
      font-size: 18px;
    }
    #settings, #codes {
      cursor: pointer;
    }
    main {
      text-align: center;
      margin-top: 30px;
    }
    .glitch-btn {
      font-size: 24px;
      padding: 20px 40px;
      margin: 20px;
      background: #111;
      border: 2px solid #0f0;
      color: #0f0;
      cursor: pointer;
      animation: glitch 0.3s infinite alternate;
    }
    @keyframes glitch {
      0% { transform: translate(0); }
      50% { transform: translate(1px, -1px); }
      100% { transform: translate(-1px, 1px); }
    }
    #counter, #multiplier, #message {
      margin-top: 10px;
      font-size: 20px;
    }
    #codeInput, #upgrades {
      margin-top: 20px;
    }
    input[type="text"] {
      padding: 5px;
      font-size: 16px;
    }
    button {
      background: #111;
      border: 1px solid #0f0;
      color: #0f0;
      padding: 5px 10px;
      margin: 5px;
      cursor: pointer;
    }
  </style>
</head>
<body>
  <header>
    <div id="settings">⚙️ Settings</div>
    <div id="codes">🧪 Enter Code</div>
  </header>

  <main>
    <h1>GLITCH CLICKER</h1>
    <button class="glitch-btn" id="clicker">CLICK</button>
    <div id="counter">Glitch Points: 0</div>
    <div id="multiplier">Multiplier: 1</div>
    <div id="message"></div>

    <div id="upgrades">
      <h2>Upgrades</h2>
      <button onclick="buyMultiplier()">+1 Multiplier (Cost: 100 GP)</button>
      <button onclick="buyAutoClick()">Auto Clicker (Cost: 500 GP)</button>
    </div>

    <div id="codeInput" style="display:none;">
      <input type="text" id="codeBox" placeholder="Enter secret code...">
      <button onclick="useCode()">Submit</button>
    </div>
  </main>

  <script>
    let points = parseInt(localStorage.getItem('points')) || 0;
    let multiplier = parseInt(localStorage.getItem('multiplier')) || 1;
    let autoClicker = parseInt(localStorage.getItem('autoClicker')) || 0;

    const clicker = document.getElementById('clicker');
    const counter = document.getElementById('counter');
    const multDisplay = document.getElementById('multiplier');
    const message = document.getElementById('message');
    const codesBtn = document.getElementById('codes');
    const codeInput = document.getElementById('codeInput');

    function updateDisplay() {
      counter.textContent = `Glitch Points: ${points}`;
      multDisplay.textContent = `Multiplier: ${multiplier}`;
      localStorage.setItem('points', points);
      localStorage.setItem('multiplier', multiplier);
      localStorage.setItem('autoClicker', autoClicker);
    }

    function showMilestoneMessage(p) {
      if (p === 1) message.textContent = "Welcome!";
      else if (p === 10) message.textContent = "Transforming...";
      else if (p === 100) message.textContent = "Glitch Visitor";
      else if (p === 1000) message.textContent = "Reality Breaking";
      else if (p === 10000) message.textContent = "You are the Glitch!";
    }

    clicker.addEventListener('click', () => {
      points += multiplier;
      updateDisplay();
      showMilestoneMessage(points);
    });

    codesBtn.addEventListener('click', () => {
      codeInput.style.display = codeInput.style.display === 'none' ? 'block' : 'none';
    });

    function useCode() {
      const code = document.getElementById('codeBox').value.trim().toLowerCase();
      if (code === "superglitch") {
        points += 100000;
        message.textContent = "Code accepted: +100000 Glitch Points";
      } else if (code === "bestglitchcode") {
        multiplier += 100000;
        message.textContent = "Code accepted: +100000 Multiplier";
      } else if (code === "firstglitch") {
        multiplier += 1000;
        message.textContent = "Code accepted: +1000 Multiplier";
      } else {
        message.textContent = "Invalid Code!";
      }
      updateDisplay();
      document.getElementById('codeBox').value = "";
    }

    function buyMultiplier() {
      if (points >= 100) {
        points -= 100;
        multiplier += 1;
        message.textContent = "+1 Multiplier purchased!";
      } else {
        message.textContent = "Not enough Glitch Points!";
      }
      updateDisplay();
    }

    function buyAutoClick() {
      if (points >= 500 && autoClicker === 0) {
        points -= 500;
        autoClicker = 1;
        message.textContent = "Auto Clicker Activated!";
        startAutoClick();
      } else if (autoClicker === 1) {
        message.textContent = "Auto Clicker already active!";
      } else {
        message.textContent = "Not enough Glitch Points!";
      }
      updateDisplay();
    }

    function startAutoClick() {
      if (autoClicker) {
        setInterval(() => {
          points += multiplier;
          updateDisplay();
        }, 1000);
      }
    }

    // Ενεργοποιεί το auto click αν έχει αγοραστεί
    if (autoClicker) startAutoClick();

    // Εμφανίζει δεδομένα στην αρχή
    updateDisplay();
  </script>
</body>
</html>
